# Database Configuration
# Copy this file to .env and update with your actual credentials

DB_HOST="localhost"
DB_USER="your_database_user"
DB_PASS="your_database_password"
DB_NAME="your_database_name"

# OneSignal Configuration
# Get these from OneSignal Dashboard > Settings > Keys & IDs
# ONESIGNAL_APP_ID is safe for client-side JS (public)
# ONESIGNAL_REST_API_KEY must be kept secret (server-side only)

ONESIGNAL_APP_ID="your_onesignal_app_id"
ONESIGNAL_REST_API_KEY="your_onesignal_rest_api_key"

# Application Settings
# APP_ENV: development, staging, or production
# ENABLE_DEBUG_LOGGING: Set to true for detailed logging (development only)

APP_ENV="production"
ENABLE_DEBUG_LOGGING="false"
